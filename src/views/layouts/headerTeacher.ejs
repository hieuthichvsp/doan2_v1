<header>
    <nav>
        <input type="checkbox" name="open" id="open">
        <label for="open" class="open">
            <i class="fas fa-bars"></i>
        </label>
        
        <!-- Di chuyển phần user section ra ngoài menu để nằm ở góc phải trên cùng -->
        <div class="user-section-header">
            <div class="welcome-text">
                <i class="fas fa-user-circle"></i>
                <span>Xin chào, <%= locals.user ? user.name : 'Teacher' %></span>
            </div>
            <a href="/logout" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                <span>Đăng xuất</span>
            </a>
        </div>
        
        <div class="menu">
            <div class="logo">
                <a href="/teacher/dashboard">
                    <img src="/img/vlute_icon.png" alt="Logo trường">
                </a>
            </div>
            
            <ul>
                <li><a href="/teacher/dashboard"><span><i class="fas fa-home"></i></span>Trang chủ</a></li>
                <li><a href="/teacher/classSessionManagement"><span><i class="fas fa-book-open"></i></span>Lớp học phần</a></li>
                <li><a href="/teacher/attendance"><span><i class="fas fa-clipboard-check"></i></span>Điểm danh</a></li>
                <li><a href="/teacher/schedule"><span><i class="fas fa-calendar-alt"></i></span>Lịch dạy</a></li>
                <li><a href="/teacher/statistics"><span><i class="fas fa-chart-bar"></i></span>Thống kê</a></li>
                <li class="notification-item">
                    <a href="/teacher/notifications"><span><i class="fas fa-bell"></i></span>Thông báo
                        <span class="notification-counter">3</span>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<style>
    /* Thêm style cho phần notification counter */
    .notification-counter {
        position: absolute;
        top: -5px;
        right: -5px;
        background-color: #ff4757;
        color: white;
        font-size: 11px;
        border-radius: 50%;
        width: 18px;
        height: 18px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .notification-item {
        position: relative;
    }

    /* Style cho hover effect */
    .menu ul li a {
        transition: all 0.3s ease;
    }

    .menu ul li a:hover {
        background-color: rgba(255, 255, 255, 0.1);
        transform: translateX(5px);
    }

    /* Hiển thị icon active cho trang hiện tại */
    .menu ul li a.active {
        border-left: 4px solid #fff;
        background-color: rgba(255, 255, 255, 0.1);
    }

    /* Responsive cho menu nhỏ hơn */
    @media screen and (max-width: 768px) {
        .menu ul li a span {
            margin-right: 0;
        }
        
        .menu ul li a span i {
            font-size: 20px;
        }
        
        .menu ul li a {
            flex-direction: column;
            padding: 10px 5px;
            text-align: center;
            font-size: 12px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Đánh dấu menu item đang active dựa trên URL hiện tại
        const currentUrl = window.location.pathname;
        const menuItems = document.querySelectorAll('.menu ul li a');
        
        menuItems.forEach(item => {
            if (currentUrl.includes(item.getAttribute('href'))) {
                item.classList.add('active');
            }
        });
    });
</script>